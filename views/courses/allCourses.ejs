<% layout('layout/userboilerplate') -%>

<section>
 <%- include("../partials/flash") %> 
    <div class="row products">
        <h4 class="display-4 bg-light p-3 rounded"><i class="fa-solid fa-book-open" style="font-size:4rem;color:black;"></i> Courses</h4>
        <% for(let course of courses) {%>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card shadow-sm mx-auto position-relative" style="width: 20rem;">
                    <img src="<%=course.img%>" class="card-img-top" alt="item image">
                    <span class="badge rounded-pill bg-light text-dark w-25 position-absolute translate-middle-y" style="top:41%;left:5%">3 &star; | 5</span>
                    <div class="card-body">
                      <h5 class="card-title d-flex justify-content-between align-items-center">
                        <span><%= course.name %></span>
                        <span class="btn like-button bg-light rounded-circle">
                            <i  course-id="<%=course._id%>" class="far fa-heart"></i>
                        </span>
                      </h5>
                      <p class="card-text fw-light"><%= course.desc%></p>
                      
                        <% if(course.reviews.length){  %>
                          <p class="text-muted"><%=course.reviews.length%>  reviews</p>
                        <% }else{ %>
                          <p class="text-muted">No reviews</p>
                        <% } %>  
                        
                     
                      <h6 class="card-title"><span class="fw-lighter fs-6 text-decoration-line-through">Rs.<%= course.price %></span> Rs.<%= course.price %> <span class="fw-light fs-6 text-warning">( 50 % OFF )</span> </h6>
                      <a href="/courses/<%=course._id%>" class="btn btn-sm show-btn">Buy Now</a>
                    </div>
                </div>
            </div>
        <% } %> 
    </div>

  
</section>


<script src="/js/script.js"></script>

