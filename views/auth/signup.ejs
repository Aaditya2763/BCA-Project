<% layout('layout/userboilerplate') -%>



<div class="border border-dark p-3 mx-auto w-50 shadow-lg">
    <%- include("../partials/flash") %> 
    <h1 class="text-center">Sign Up</h1>
    <p class="text-danger">Items marked as * are mandatory to fill</p>
    <form action="/auth/user-signup" method="post">
        <div class="mb-3">
            <label class="form-label" for="username">Username<span class="text-danger">*</span></label>
            <input class="form-control" type="text" name="username" id="username">
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email<span class="text-danger">*</span></label>
            <input class="form-control" type="email" name="email" id="email">
        </div>
        <div class="mb-3">
            <label class="form-label" for="phone_no">Phone_no<span class="text-danger">*</span></label>
            <input class="form-control" type="number" name="phone_no" id="phone_no">
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password<span class="text-danger">*</span></label>
            <input class="form-control" type="password" name="password" id="password">
        </div>
        <button type="submit" class="btn btn-sm btn-success">SignUp</button>
    </form>
</div