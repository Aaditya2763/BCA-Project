<% layout('layout/userboilerplate') -%> <%- include("../partials/flash") %>
<h4 class="display-4 bg-light p-3 m-auto rounded shadow center " style="width: 85%;"><i class="fab fa-shopify" style="margin-right: 20px"></i>Feedback</h4>

<div class="container d-flex justify-content-around">
  <div class="mt-3 p-5 shadow" style="width: 500px;margin-left: 100px;">
    <h1 class="display-6">Leave Your Review</h1>
    <form action="/products/review" method="post">
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="rating"
            value="0"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <textarea
          class="form-control"
          name="comment"
          id="commment"
          rows="3"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-md btn-success">Submit</button>
    </form>
  </div>
  <div class="card mt-3 shadow" style="width:350px; height:250px;margin-right:100px;">
    <div class="card-body">
      <p class="starability-result" data-rating="4">Rated: 5 stars</p>
      <p>This is a comment</p>
      <p class="text-muted text-capitalize">By Aaditya</p>
      <p class="text-muted">Created today</p>
      <form class="d-inline-block" action="/products">
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>
