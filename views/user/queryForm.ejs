 
 
<% layout('layout/userboilerplate') -%>

<%- include("../partials/flash") %> 

 
<h4 class="display-4 bg-light p-3 rounded shadow container" >
  <i class="fa-solid fa-headset" style="font-size:4rem;color:black;"> Leave Your Query</i></h4>
 <div class="mt-3 p-5 shadow mx-auto " style="width: 600px; margin-left: 100px;">
   
    
<div class="border border-dark p-3 mx-auto w-50 shadow-lg">
    <%- include("../partials/flash") %> 
    
    <p class="text-danger">Items marked as * are mandatory to fill</p>
    <form action="/user/query" method="post">
       
        <div class="mb-3">
            <label class="form-label" for="course-title">Course Title<span class="text-danger">*</span></label>
            <input class="form-control" type="text" name="course-title" id="course-title">
        </div>
         <div class="mb-3">
            <label class="form-label" for="author">Author<span class="text-danger">*</span></label>
            <input class="form-control" type="text" name="author" id="author">
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Query<span class="text-danger">*</span></label>
            <textarea name="query" id="query" cols="10" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-sm btn-success">SignUp</button>
    </form>
</div>
  </div>